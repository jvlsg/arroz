Uxvt.perl-ext-common: font-size
URxvt.depth: 32

*.font:	xft: Raize:size=12
!URxvt.font:	xft: FreeMono:size=12
!URxvt.font:	xft:DejaVuSansMono:size=12

!BACKGROUND & TRANSPARENCY ====================================================

!95 is the opacity in %
!URxvt.foreground: [85]#000000

!urxvt*transparent:	true
!urxvt*shading:	30
*foreground: #f2f2f2
!urxvt.background: rgba:0000/0000/0200/c800
URxvt.background: [80]#000000

!COLORS =======================================================================
! special
*.foreground:   #c5c8c6
*.background:   #1d1f21
*.cursorColor:  #c5c8c6

! black
*.color0:       #282a2e
*.color8:       #373b41

! red
*.color1:       #a54242
*.color9:       #cc6666

! green
*.color2:       #8c9440
*.color10:      #b5bd68

! yellow
*.color3:       #de935f
*.color11:      #f0c674

! blue
*.color4:       #5f819d
*.color12:      #81a2be

! magenta
*.color5:       #3e99cb
*.color13:      #5d6aca

! cyan
*.color6:       #5e8d87
*.color14:      #8abeb7

! white
*.color7:       #707880
*.color15:      #c5c8c6


!URXVT ==================================================================
!SCROLL
URxvt.keysym.Shift-Up:     command:\033]720;1\007
URxvt.keysym.Shift-Down:     command:\033]721;1\007

!COPY PASTE
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

!ZOOM
URxvt.keysym.C-equal:     font-size:increase
URxvt.keysym.C-Minus:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-A-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show 

URxvt.scrollBar:	false
URxvt.iso14755: false
URxvt.iso14755_52: false
