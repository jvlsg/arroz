bindsym $mod+Shift+period exec pkill -f "polybar eye"

#KEYBOARD LAYOUT ---------------------
set $keyboard_layout Keyboard Layout: (b) br, (e) en-us, (j) jp
mode "$keyboard_layout" {
    bindsym b exec --no-startup-id setxkbmap br ,mode "default"
    bindsym e exec --no-startup-id setxkbmap us ,mode "default"
    bindsym j exec --no-startup-id setxkbmap jp ,mode "default"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+k mode "$keyboard_layout"


